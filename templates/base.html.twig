{# la variable Twig "route" contiendra le nom de la route actuellement charg√©e #}
{% set route = app.request.attributes.get('_route') %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %} - Le Blog de Batman</title>
    {# Inclusion Font Awesome #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    {# Inclusion CSS Bootstrap #}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    {# Inclusion Styles perso #}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {# Bloc pour ajouter des fichiers CSS additionnels #}
    {% block css %}{% endblock %}
</head>
<body>

    {# Inclusion du menu principal du site #}
    {% include 'partials/_main_navbar.html.twig' %}

    {# Bloc pour afficher le contenu des pages #}
    {% block body %}{% endblock %}


    {# Inclusion JS Bootstrap #}
    <link rel="stylesheet" href="{{ asset('js/bootstrap.bundle.min.js') }}">
    {# Bloc pour afficher des fichiers JS additionnels #}
    {% block js %}{% endblock %}
</body>
</html>